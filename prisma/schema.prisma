generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model categoria {
  id     Int    @id @default(autoincrement())
  nombre String

  productos producto[]
}

model cliente {
  id            Int     @id @default(autoincrement())
  nombreNegocio String
  nombreDueno   String?
  telefono      String?
  direccion     String?
  zona          String?
  email         String?
  cuit          String  @unique

  ventas       venta[]
  notaCreditos nota_credito[]
}

model producto {
  id             Int      @id @default(autoincrement())
  nombre         String
  categoriaId    Int?
  stock          Int      @default(0)
  costoUnitario  Decimal  @db.Decimal(10, 2)
  precioUnitario Decimal  @db.Decimal(10, 2)
  creadoEn       DateTime @default(now())
  activo       Boolean  @default(true)

  categoria categoria?     @relation(fields: [categoriaId], references: [id])
  detalles  detalleventa[]
}

enum EstadoVenta {
  ACTIVA
  ANULADA
  ACREDITADA
  PARCIALMENTE_ACREDITADA
}

model venta {
  id        Int      @id @default(autoincrement())
  fecha     DateTime @default(now())
  clienteId Int?
  usuarioId Int
  total     Decimal  @db.Decimal(10, 2)
  estado EstadoVenta @default(ACTIVA)

  notaCreditoId  Int? // ðŸ‘ˆ NUEVO
  montoNotaUsado Decimal? @db.Decimal(10, 2) // ðŸ‘ˆ NUEVO

  cliente     cliente?       @relation(fields: [clienteId], references: [id])
  usuario     usuario        @relation(fields: [usuarioId], references: [id])
  notaCredito nota_credito?  @relation(fields: [notaCreditoId], references: [id])
  detalles    detalleventa[]
}

model detalleventa {
  id                 Int     @id @default(autoincrement())
  ventaId            Int
  productoId         Int
  cantidad           Int
  cantidadAcreditada Int     @default(0)
  precioUnitario     Decimal @db.Decimal(10, 2)

  venta    venta    @relation(fields: [ventaId], references: [id])
  producto producto @relation(fields: [productoId], references: [id])

  notasCreditoDetalle nota_credito_detalle[]

  @@index([ventaId])
  @@index([productoId])
}

model tipo_usuario {
  id          Int     @id @default(autoincrement())
  descripcion String?

  usuarios usuario[]
}

model usuario {
  id            Int      @id @default(autoincrement())
  dni           String   @unique
  nombre        String
  apellido      String
  telefono      String?
  direccion     String?
  zona          String?
  email         String?  @unique
  password      String
  creadoEn      DateTime @default(now())
  tipoUsuarioId Int?     @default(1)

  tipoUsuario  tipo_usuario?  @relation(fields: [tipoUsuarioId], references: [id])
  ventas       venta[]
  notaCreditos nota_credito[]
}

enum EstadoNotaCredito {
  DISPONIBLE
  PARCIAL
  USADA
  ANULADA
}

model nota_credito {
  id        Int      @id @default(autoincrement())
  usuarioId Int
  clienteId Int
  ventaId   Int?
  fecha     DateTime @default(now())
  total     Decimal  @db.Decimal(10, 2)

  montoUsado Decimal           @default(0) @db.Decimal(10, 2)
  estado     EstadoNotaCredito @default(DISPONIBLE)

  usuario  usuario                @relation(fields: [usuarioId], references: [id])
  cliente  cliente                @relation(fields: [clienteId], references: [id])
  ventas   venta[]
  detalles nota_credito_detalle[]
}

model nota_credito_detalle {
  id             Int     @id @default(autoincrement())
  notaCreditoId  Int
  ventaDetalleId Int
  cantidad       Int
  precioUnitario Decimal @db.Decimal(10, 2)

  notaCredito  nota_credito @relation(fields: [notaCreditoId], references: [id])
  ventaDetalle detalleventa @relation(fields: [ventaDetalleId], references: [id])

  @@index([notaCreditoId])
  @@index([ventaDetalleId])
}
